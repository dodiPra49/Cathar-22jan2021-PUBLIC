@model New.Models.HariKerjaStatus

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<h4>Tambah Hari Kerja Status</h4>
<hr />

<form asp-action="Create">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="form-group row">
        <label asp-for="Id" class="control-label col-sm-1"></label>
        <div class="col-sm-4">
            <input asp-for="Id" class="form-control" />
            <span asp-validation-for="Id" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group row">
        <label asp-for="Uraian" class="control-label col-sm-1"></label>
        <div class="col-sm-4">
            <input asp-for="Uraian" class="form-control" />
            <span asp-validation-for="Uraian" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group row">
        <label asp-for="Libur" class="control-label col-sm-1"></label>
        <div class="col-sm-4">
            <input asp-for="Libur" class="form-check-input"  />
            <span asp-validation-for="Libur" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group row">
        <label class="control-label col-sm-1"></label>
        <div class="col-sm-2">
            <input type="submit" value="Simpan" class="btn btn-primary" />
            <a class="btn btn-success" asp-action="Index">Kembali</a>
        </div>
    </div>
</form>




