@model New.Models.Pegawai

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<br />
<h4>Tambah Pegawai</h4>
<hr />


<form asp-action="Create">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="form-group row">
        <label asp-for="NIP" class="control-label col-sm-2"></label>
        <div class="col-sm-4">
            <input asp-for="NIP" class="form-control" />
            <span asp-validation-for="NIP" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="Nama" class="control-label col-sm-2"></label>
        <div class="col-sm-4">
            <input asp-for="Nama" class="form-control" />
            <span asp-validation-for="Nama" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="GelarDepan" class="control-label col-sm-2">Gelar Depan</label>
        <div class="col-sm-4">
            <input asp-for="GelarDepan" class="form-control" />
            <span asp-validation-for="GelarDepan" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="GelarBelakang" class="control-label col-sm-2">Gelar Belakang</label>
        <div class="col-sm-4">
            <input asp-for="GelarBelakang" class="form-control" />
            <span asp-validation-for="GelarBelakang" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="TempatLahir" class="control-label col-sm-2">Tempat Lahir</label>
        <div class="col-sm-4">
            <input asp-for="TempatLahir" class="form-control" />
            <span asp-validation-for="TempatLahir" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="TgLLahir" class="control-label col-sm-2">Tanggal Lahir</label>
        <div class="col-sm-4">
            <input asp-for="TgLLahir" class="form-control" asp-format="{0:MM/dd/yyyy}" />
            <span asp-validation-for="TgLLahir" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="TglPensiun" class="control-label col-sm-2">Tanggal Pensiun</label>
        <div class="col-sm-4">
            <input asp-for="TglPensiun" class="form-control" asp-format="{0:dd/MM/yyyy}"  />
            <span asp-validation-for="TgLLahir" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <label class="control-label col-sm-2"></label>
        <div class="col-sm-4">
            <input type="submit" value="Simpan" class="btn btn-primary" />
            <a asp-action="Index2" class="btn btn-success">Kembali</a>
        </div>
    </div>
</form>
