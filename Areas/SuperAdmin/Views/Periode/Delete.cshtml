@model New.Models.Periode

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br />
<h4>Apakah anda yakin menghapus periode ini?</h4>
<hr />

<div>

    @*<div class="form-group row">
        <label class="control-label col-sm-2"></label>
        <div class="col-sm-4">
            <h4>//Periode .(del)</h4>
        </div>
    </div>*@

    <div class="form-group row">
        <label class="control-label col-sm-2">Id Periode</label>
        <label class="control-label col-sm-4 border-bottom">@Model.Id </label>
    </div>

    <div class="form-group row">
        <label class="control-label col-sm-2">Tahun</label>
        <label class="control-label col-sm-4 border-bottom">@Model.Tahun </label>
    </div>
    <div class="form-group row">
        <label class="control-label col-sm-2">Bulan</label>
        <label class="control-label col-sm-4 border-bottom">@Model.Bulan </label>
    </div>


    <form asp-action="Delete">
        <div class="form-group row">
            <input type="hidden" asp-for="Id" />
            <div class="col-sm-2"></div>
            <div class="col-sm-2">
                <input type="submit" value="Hapus" class="btn btn-danger" />
                <a class="btn btn-success" asp-action="Index">Kembali</a>
            </div>
        </div>
    </form>
</div>
