@model IEnumerable<New.Models.JamKerjaPolaDt>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br />

<div class="col-6">
    <h4>Pola Jam Kerja Detail @ViewBag.NamaUnitKerja</h4>
    <br />
    <form asp-action="Index" method="get">

        <div class="form-group row justify-content-xl-start">
            <label class="control-label  col-3">Pola Jam Kerja</label>
            <select name="idPolaPilih" class="form-control col-8"
                    asp-items="ViewBag.IdPola"
                    onchange="this.form.submit()"
                    value="ViewBag.idPolaPilih"></select>
        </div>
    </form>
</div>
</br>
<div class="col-12">
    <table class="table table-sm table-striped">
        <thead class="thead-light">
            <tr>
                <th>
                    <div style="color:#007bff">HARI</div>
                </th>
                <th>
                    <div style="color:#007bff">Sesi(1) MASUK</div>
                </th>
                <th>
                    <div style="color:#007bff">Sesi(1) KELUAR</div>
                </th>
                <th>
                    <div style="color:#007bff">Sesi(2) MASUK</div>
                </th>
                <th>
                    <div style="color:#007bff">Sesi(2) KELUAR</div>
                </th>

                <th>
                    <div class="nav justify-content-end">

                        <a class='btn btn-primary'
                           asp-action="Create"
                           asp-route-idPola="@ViewBag.IdPolaPilih"><i class="fa fa-plus"></i></a>
                        &nbsp;
                        <a class='btn  btn-warning' asp-action="Print"><i class="fa fa-print"></i> </a>
                    </div>
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.IdDowNavigation.Uraian)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.MasukA)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.KeluarA)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.MasukB)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.KeluarB)
                    </td>

                    <td>
                        <div class="nav justify-content-end">
                            <a asp-action="Edit" asp-route-idpola="@item.IdPola"
                               asp-route-iddow="@item.IdDow" class="btn btn-success btn-sm">
                                <i class="fa fa-edit"></i>
                            </a>
                            &nbsp;
                            <a asp-action="Delete" asp-area="SuperAdmin" asp-route-idpola="@item.IdPola"
                               asp-route-iddow="@item.IdDow" class="btn btn-danger btn-sm">
                                <i class="fa fa-times"></i>
                            </a>

                        </div>

                        @*@Html.ActionLink("Edit", "Edit", new { /* id=item.PrimaryKey */ }) |
                                @Html.ActionLink("Details", "Details", new { /* id=item.PrimaryKey */ }) |
                                @Html.ActionLink("Delete", "Delete", new { /* id=item.PrimaryKey */ })
                            </td>*@
                </tr>
            }
        </tbody>
    </table>
</div>