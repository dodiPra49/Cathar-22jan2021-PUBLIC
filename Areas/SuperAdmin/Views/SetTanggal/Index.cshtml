@model  DateTime
 
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<form asp-action="Index" method="post">


    <div class="form-group row">
 
        <label class="control-label  col-sm-1">Tanggal Periode : </label>
        <div class="col-sm-4">
            <input type="date"  id="Tanggal" name="Tanggal" asp-for="@Model" class="form-control " />
        </div>
    </div>
    <div class="form-group row">
        <label class="control-label col-sm-1"></label>
        <div class="col-sm-4">
            <input type="submit" value="Set" name="btn" class="btn btn-primary" />
            <a asp-action="Index" asp-controller="Home" asp-area="SuperAdmin" class="btn btn-danger">
                Batal
            </a>
        </div>
    </div>
</form>