@model New.Models.ApplicationUser

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<br />
<h4>Ubah user</h4>
<hr />

<form asp-action="Edit">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input type="hidden" asp-for="NIP" />

    <div class="form-group row ">
        <label class="col-2">Id</label>
        <input class="col-4 form-control" asp-for="NIP" readonly />
        <span asp-validation-for="NIP" class="text-danger"></span>
    </div>

    <div class="form-group row ">
        <label class="col-2">Nama</label>
        <input class="col-4 form-control" asp-for="Nama" />
    </div>

    <div class="form-group row">
        <label class="col-2">Unit Kerja</label>
        <input class="col-4 form-control" asp-for="UnitKerja" />
    </div>


    <div class="form-group row">
        <div class="col-sm-2"></div>
        <input type="submit" value="Simpan" class="btn btn-primary" />
        &nbsp;
        <a class='btn btn-success' asp-action="Index">Kembali</a>
    </div>
</form>





