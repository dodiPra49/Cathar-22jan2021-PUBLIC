@model IEnumerable<New.Models.HariKerjaNip>
    <h7><b>DAFTAR HARI KERJA</b></h7>
@if (Model.Count() != 0)
{
    @*<div class="col-sm-12 border border-danger">*@
    <table class="table table-sm small border border-danger"  width="100%" id="periodeTGL">
        <thead>
            <tr>
                <th>
                    Tgl
                </th>
                <th>
                    Uraian
                </th>

                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Tanggal)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.IdHariKerjaStatusNavigation.Uraian)
                    </td>

                    <td>
                        <div class="nav justify-content-end">
                            <a asp-action="index" asp-route-idnip="@item.NIP"
                               asp-route-strtgl="@item.Tanggal.ToShortDateString()"
                               class="btn btn-danger btn-sm">
                                <i class="fa fa-edit "></i>
                            </a>

                        </div>

                    </td>
                </tr>
            }
        </tbody>
    </table>
    @*</div>*@
}
else
{

    <h4># Tidak ada data !</h4>
}



