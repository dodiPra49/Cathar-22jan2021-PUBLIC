@model IEnumerable<New.Models.Rapat>

@using New.Utility

<h5>Daftar List Rapat </h5>

@if (@Model.Count() != 0)
{
    <table class="table table-responsive table-sm width="100%">
        <thead class="thead-light">
            <tr>

                <th width="5px">
                    Mulai
                </th>
                <th width="10px">
                    Hingga
                </th>
                <th >
                    AKtivitas
                </th>
                <th width="5px">
                    Aksi
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
            <tr>

                <td>
                    @Html.DisplayFor(modelItem => item.WaktuMulai)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.WaktuHingga)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Aktifitas)
                </td>

                <td>
                    <div class="nav justify-content-end">
                        <a asp-action="index" asp-route-idRapat="@item.Id"
                            class="btn btn-success">
                            <i class="fa fa-edit"></i>
                        </a>

                    </div>

                </td>
            </tr>
            }
        </tbody>
    </table>
}
else
{
    <h5>Tidak ada records bro/sis</h5>
}