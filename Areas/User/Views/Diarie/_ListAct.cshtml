@model IEnumerable<New.Models.Diary>

@using New.Utility

<h5>Daftar Aktifitas Harian </h5>

@if (@Model.Count() != 0)
{
    <table class="table table-responsive table-sm">
        <thead class="thead-light">
            <tr>

                <th>
                    Mulai
                </th>
                <th>
                    Hingga
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Aktifitas)
                </th>

                <th>Aksi</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>

                    <td>
                        @Html.DisplayFor(modelItem => item.WaktuMulai)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.WaktuHingga)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Aktifitas)
                    </td>

                    <td>
                        <div class="nav justify-content-end">
                            <a asp-action="index" asp-route-id="@item.Id"
                               asp-route-nip="@item.Nip" class="btn btn-success">
                                <i class="fa fa-edit"></i>
                            </a>

                        </div>

                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <h5>Tidak ada records bro/sis</h5>
}