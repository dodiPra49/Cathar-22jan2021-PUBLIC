@page
@model ChangePasswordModel
@{
    ViewData["Title"] = "Rubah Password";
    ViewData["ActivePage"] = ManageNavPages.ChangePassword;
}

<h4>@ViewData["Title"]</h4>
<br />
<partial name="_StatusMessage" for="StatusMessage" />
@*<div class="row">*@
@*<div class="col-md-6">*@
<form id="change-password-form" method="post">
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group row">
        <label class="control-label col-sm-2">Password Lama</label>
        <div class="col-sm-4">
            <input asp-for="Input.OldPassword" class="form-control" />
            <span asp-validation-for="Input.OldPassword" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <label class="control-label col-sm-2">Password Baru</label>
        <div class="col-sm-4">
            <input asp-for="Input.NewPassword" class="form-control" />
            <span asp-validation-for="Input.NewPassword" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <label class="control-label col-sm-2">Ulangi password</label>
        <div class="col-sm-4">
            <input asp-for="Input.ConfirmPassword" class="form-control" />
            <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <div class="col-sm-2"></div>
        <div class="col-sm-4">
            <button type="submit" class="btn btn-primary">Simpan</button>
        </div>
    </div>
    
</form>
@*</div>*@
@*</div>*@

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}