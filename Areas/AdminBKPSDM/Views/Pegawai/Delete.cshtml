@model New.Models.Pegawai

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


@if (ViewBag.ErrorReffLink != null)
{
    if (ViewBag.ErrorReffLink != "")
    {
        <div class="alert alert-info">
            <p>@ViewBag.ErrorReffLink</p>
        </div>
    }
}

<br />
<h4>Apakah anda yakin menghapus data pegawai ini?</h4>
<hr />

<div class="form-group row">

    <dt class="col-sm-2">
        Nama Pegawai
        @*@Html.DisplayNameFor(model => model.Nama)*@
    </dt>
    <dd class="col-sm-4 border-bottom">
        @Html.DisplayFor(model => model.Nama)
    </dd>
</div>

<div class="form-group row">
    <dt class="col-sm-2">
        Tempat Lahir
        @*@Html.DisplayNameFor(model => model.TempatLahir)*@
    </dt>
    <dd class="col-sm-4 border-bottom">
        @Html.DisplayFor(model => model.TempatLahir)
    </dd>
</div>

<div class="form-group row">
    <dt class="col-sm-2">
        Tgl Lahir
        @*@Html.DisplayNameFor(model => model.TgLLahir)*@
    </dt>
    <dd class="col-sm-4 border-bottom">
        @Html.DisplayFor(model => model.TgLLahir)
    </dd>
</div>

<div class="form-group row">
    <dt class="col-sm-2">
        Tgl Pensiun
        @*@Html.DisplayNameFor(model => model.TglPensiun )*@
    </dt>
    <dd class="col-sm-4 border-bottom">
        @Html.DisplayFor(model => model.TglPensiun)
    </dd>
</div>

<form asp-action="Delete">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input type="hidden" asp-for="NIP" />
    <div class="form-group row">
        <div class="col-sm-2"></div>
        <div class="col-sm-2">
            <input type="submit" value="Hapus" class="btn btn-danger" />
            <a class='btn btn-success' asp-action="Index2"> Kembali</a>
        </div>
    </div>
</form>

